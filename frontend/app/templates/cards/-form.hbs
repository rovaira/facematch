<form {{action "save" model on="submit"}}>
  <p>
    <label for="card-name">Name:</label>
      {{input name="name" value=model.name placeholder="Enter person's name"}}
  </p>
  <p>
    <label for="card-image">Image URL:</label>
      {{input name="image" value=model.image placeholder="Enter card's image URL"}}
  </p>
  <input type="submit" value="Save"/>
</form>
<button {{action "cancel" model on="click"}}>Cancel</button>
